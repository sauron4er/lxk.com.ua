mixin content(lang)
  script(type = 'text/javascript').
    function changeLanguage(lang) {
      document.getElementById("info_en").style.display = 'none';
      document.getElementById("info_ua").style.display = 'none';
      document.getElementById(`info_${lang}`).style.display = 'block';

      document.getElementById("flag_en").style.filter = 'opacity(75%)';
      document.getElementById("flag_ua").style.filter = 'opacity(75%)';
      document.getElementById(`flag_${lang}`).style.filter = 'none';
    }

  hr
  .text-center
    a#flag_en.mr-2(href="#", style="filter: none")
      img(
        src="../static/img/united-kingdom.png",
        alt="english",
        width="30",
        onclick="changeLanguage('en')"
      )
    a#flag_ua.mr-2(href="#", style="filter: opacity(75%)")
      img(
        src="../static/img/ukraine.png",
        alt="ukrainian",
        width="30",
        onclick="changeLanguage('ua')"
